{% extends 'index.html.twig' %}

{% block hero %}{% endblock %}

{% block content %}
    {# <div class="Section">
        <div class="row">
            <div class="col-10 offset-1">
                {{ post.content }}
            </div>
        </div>
    </div>  #}

    <div class="Section margin-top-0">
        <div class="row">
            <div class="col-8 offset-2">
                {% 
                    include 'partials/split-text.html.twig' 
                    with { 
                        title: post.meta( 'introduction' ), 
                        id: fn( 'uniqid' ), 
                        classes: [ 'h1', 'text-align-center', 'margin-0' ],
                        delay: 1.5,  
                    } 
                %}
            </div>
        </div>
    </div>

    <div class="Smiley-404">
        <canvas id="smiley-404" class="page-block" data-node-type="Smiley404Block" height="900"></canvas>
    </div>

    <div id="faq" class="Section Faq page-block" data-node-type="FaqBlock">
        <div class="row">
            <div class="col-4 offset-1">
                <ul class="Faq__questions" data-scroll data-scroll-sticky data-scroll-target="#faq">
                    {% for item in post.meta( 'faq' ) %}
                        <li class="Faq__questions__item{{ loop.first ? ' is-active' : '' }}">
                            <a class="js-answer" href="#{{ item.question | sanitize }}" data-scroll-to>
                                {{- item.question -}}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
             <div class="col-4 offset-1">
                <ul class="Faq__answers">
                    {% for item in post.meta( 'faq' ) %}
                        <li id="{{ item.question | sanitize }}" class="Faq__answers__item" data-scroll-repeat data-scroll data-scroll-call="answer">
                            {{- item.answer -}}
                        </li>
                    {% endfor %}
                </ul>
             </div>
        </div>
    </div>

{% endblock  %}
