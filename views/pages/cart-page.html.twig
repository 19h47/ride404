{% extends 'index.html.twig' %}


{% block hero %}
	 <div class="Hero" data-scroll-section>
        <div class="row">
            <div class="col-10 offset-1">
				<h1 class="text-align-center margin-0">
					{%
						include 'partials/split-text.html.twig'
						with {
							title: post.title,
							id: uniqid(),
							delay: 0.5,
						}
						only
					%}
				</h1>
			</div>
		</div>
	</div>
{% endblock %}

{% block content %}
    <div class="Section" data-scroll-section>
        <div class="row">
            <div class="col-10 offset-1">
                {{ post.content }}
            </div>
        </div>
    </div>

{% endblock  %}
