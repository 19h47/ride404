{#
 # Content widget product
 #
 # @package WordPress
 # @subpackage Rider404
 #}
<li {{ function( 'wc_product_class', 'Loop-product js-item' ) }}>
	{% do action( 'woocommerce_widget_product_item_start', template_args ) %}

    {% include 'partials/featured.html.twig' with { product: product } only %}

	{% include 'woocommerce/loop/loop-product-link-open.html.twig' with { link: product.get_permalink() } only %}
		{% include 'woocommerce/loop/loop-product-thumbnail.html.twig' with { product: product } only %}
        {% include 'woocommerce/loop/loop-product-title.html.twig' with { title: product.get_name() } only %}
	</a>

	{% if show_rating %}
		{{- function( 'wc_get_rating_html', product.get_average_rating() ) -}}
	{% endif %}

    {% include 'woocommerce/loop/price.html.twig' with { product: product, price_html: product.get_price_html() } only %}

	{% do action( 'woocommerce_widget_product_item_end', template_args ) %}
</li>
