<!DOCTYPE html>
<!--[if IE 9]>
<html {{ html_class( 'ie9 no-js no-touch' ) }} {{ site.language_attributes }}>
<![endif]-->
<!--[if !(IE 9)]><!-->
	<html {{ site.language_attributes }} {{ html_class( 'no-js no-touch is-loading is-ontop' ) }}> <!--<![endif]-->

	<head>

		<meta charset="{{ site.charset }}">
		<link rel="profile" href="http://gmpg.org/xfn/11">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		{{ function( 'wp_head' ) }}

	</head>

	<body class="{{ body_class }}{{ post.body_classes ? ( ' ' ~ post.body_classes | join( ' ' ) ) }}">

		<div id="svg-sprite" class="d-none">{{- include( 'icons.svg' ) -}}</div>

		<div data-module-scroll="main" data-scroll-smooth="{{ scroll_smooth and scroll_smooth == 'false' ? 'false' : 'true' }}">

			{% do action( 'woocommerce_before_main_content' ) %}

			<div id="splashscreen" class="Splash-screen">
				<div></div>
				<div></div>
			</div>

			{% if is_front_page %}
				<div class="Cursor js-cursor">
					{{ include( 'svg/use.html.twig', { icon: 'chevron-right' }, with_context = false ) }}
					{{ include( 'svg/use.html.twig', { icon: 'chevron-left' }, with_context = false ) }}
				</div>
			{% endif %}

			<div id="{{ post.id ? "page-#{post.id}" : 'page' }}" class="Site-content">

				{% if is_front_page %}
					<div class="Arrow Arrow--down d-none d-md-block" data-scroll-section>
						<div
							id="arrow-down"
							data-scroll
							data-scroll-repeat
							data-scroll-call="arrow-down"
							data-scroll-position="bottom"
							data-module-arrow
							data-lottie-json="arrow-down"
							data-lottie-loop="true"
						></div>
					</div>
				{% endif %}

				<div class="Coordinates" data-scroll-section>
					{% for i in 0..9 %}
						<span
							id="coordinate-{{ i }}"
							data-number="{{ random( 1, 100000 ) }}"
							data-scroll
							data-scroll-repeat
							data-scroll-speed="{{ random( 1, 9 ) }}"
							data-scroll-call="coordinate-{{ i }}"
							style="top: {{ i + random( 0, 100 ) }}%; left: {{ i + random( 0, 100 ) }}%;"
							data-module-coordinate
						>0</span>
					{% endfor %}
				</div>

				{% include 'header.html.twig' %}

				{% include 'components/navigation.html.twig' with { menu: nav_menus.main } %}


				{% block hero %}
					<div class="Hero" data-scroll-section>
						<div class="row">
							<div class="col-10 offset-1">
								<h1 class="text-align-center m-0">
									{{-
										include(
											'partials/split-text.html.twig',
											{
												title: post.meta( 'long_title' ) ? post.meta( 'long_title' ) : post.title,
												id: uniqid(),
												classes: [ 'product_title', 'entry-title' ],
												delay: 0.5
											},
											with_context = false
										)
									-}}
								</h1>
							</div>
						</div>
					</div>
				{% endblock %}

				{% block content %}
					<div class="row" data-scroll-section>
						<div class="col-10 offset-1 col-md-8 offset-md-2">
							<div class="Wysiwyg">{{- post.content -}}</div>
						</div>
					</div>
				{% endblock %}

				{% block footer %}
					{{- include( 'footer.html.twig' ) -}}
				{% endblock %}

			</div>

			{% do action( 'woocommerce_after_main_content' ) %}
		</div>

		{{ function( 'wp_footer' ) }}

	</body>
</html>
