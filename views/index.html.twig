<!DOCTYPE html>
<!--[if IE 9]>
<html {{ html_class( 'ie9 no-js no-touch' ) }} {{ site.language_attributes }}>
<![endif]-->
<!--[if !(IE 9)]><!-->
	<html {{ site.language_attributes }} {{ html_class( 'no-js no-touch' ) }}> <!--<![endif]-->

	<head>

		<meta charset="{{ site.charset }}">
		<link rel="profile" href="http://gmpg.org/xfn/11">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=5">

		{{ wp_head }}

		{# {% include 'components/gtag.html.twig' with { id: 'UA-153672608-1' } %} #}

	</head>

	<body class="{{ body_class }}{{ post.body_classes ? ( ' ' ~ post.body_classes | join( ' ' ) ) }}">
		<div id="svg-sprite" class="d-none">{% include 'icons.svg' %}</div>

		<div
			id="{{ post.id ? "page-#{post.id}" : 'page' }}"
			class="page-content"
			data-node-type="{{ post.node_type | default( 'DefaultPage' ) }}"
			data-scroll-container
			data-meta-title="{{ wp_get_document_title() }}"
		>

			{% include 'header.html.twig' %}

			{% block hero %}
				<div class="row">
					<div class="col-10 offset-1">
						<img class="Logo" src="{{ theme.link }}/{{ theme.manifest['img/svg/rider-404.svg'] }}" alt="">
					</div>
				</div>
			{% endblock %}
			
			{# woocommerce_before_main_content hook. #}
			{% do action( 'woocommerce_before_main_content' ) %}

			{% block content %}

				<div class="Page__content{{ post.thumbnail ? ' has-thumbnail' : '' }}" data-scroll-section >
					<div class="row">
						<div class="col-12 offset-4">
							<div class="Wysiwyg">{{- post.content -}}</div>
						</div>
					</div>
				</div>


			{% endblock %}

			{# woocommerce_after_main_content hook. #}
			{% do action( 'woocommerce_after_main_content' ) %}

			{% include 'footer.html.twig' %}

		</div>

		{{ wp_footer }}

	</body>
</html>
