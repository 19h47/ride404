{#
 # Image
 #
 # @param array classes
 # @param string loading
 # @param array image
 # @param array attributes
 # @param string size Optional. The requested image size. This can be a size that was in WordPress. Example: medium or large. Default full.
 #
 # @package Rider404
 #}
{% if image %}
	<img
		class="{{ classes ? classes | join( ' ' ) }}"
		loading="{{ loading | default( 'lazy' ) }}"
		src="{{ Image( image ).src( size | default( 'full' ) ) }}"
		alt="{{ Image( image ).alt }}"
		width="{{ Image( image ).width }}"
		height="{{ Image( image ).height }}"
		srcset="{{ Image( image ).srcset }}"
		sizes="{{ Image( image ).img_sizes }}"
		{{ attributes ? attributes | map( ( value, key ) => "#{key}=\"#{value}\"" ) | join( ' ' )  | raw }}
	>
{% endif %}
