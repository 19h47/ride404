{% if product.is_featured() %}
    <div id="featured-{{ product.get_id() }}" class="Featured" data-module-featured data-scroll data-scroll-call="featured-{{ product.get_id() }}">
        {{ include( 'svg/use.html.twig', { icon: 'new' }, with_context = false ) }}
    </div>
{% endif %}
