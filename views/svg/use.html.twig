{#
 # Use
 #
 # @param array classes
 # @param string id
 # @param string icon
 #
 # @file views/svg/use.html.twig
 # @package WordPress
 # @subpackage Rider404
 # @author Jérémy Levron <jeremylevron@19h47.fr> (https://19h47.fr)
 #}
<svg
	class="{{ icon }}{{ classes is defined ? ' ' ~ classes | join(' ') }}"
	{{ id is defined ? "id=\"#{ id }\"" }}
	aria-label="{{ site.description }}"
	{{ attributes ? attributes | map( ( value, key ) => "#{key}=\"#{value}\"" ) | join( ' ' )  | raw }}
>
	<use xlink:href="#{{ icon }}" href="#{{ icon }}"></use>
</svg>
